<Window x:Class="Preferences.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Preferences"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <GroupBox Name ="preferencesGroupBox"  Header="Choose you preferences:">
                <StackPanel>
                    <RadioButton Name="sportRadioButton" Content="Sport"/>
                    <RadioButton Name="musicRadioButton" Content="Music"/>
                    <RadioButton Name="foodRadioButton" Content="Food"/>
                </StackPanel>
            </GroupBox>

            <Button Content="SHOW SELECTED PREFERENCES" Click="ShowPreferencesButton_Click" Margin="0,10,0,0"/>
            <Button Content="CLEAR SELECTED PREERENCES" Click="ClearSelectionButton_Click"/>

            <TextBlock Name="resultTextBlock" Text="Selected preferences: " Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
